# Environment Configuration
OPENAI_API_KEY=your_openai_api_key_here
TAVILY_API_KEY=your_tavily_api_key_here

# Application Settings
APP_NAME=Advanced Agentic Research Platform
APP_VERSION=1.0.0
DEBUG=True
LOG_LEVEL=INFO

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Model Defaults
DEFAULT_DRAFT_MODEL=gpt-4o-mini
DEFAULT_REFLECTION_MODEL=gpt-4o-mini
DEFAULT_RESEARCH_MODEL=gpt-4o-mini
DEFAULT_WRITER_MODEL=gpt-4o-mini
DEFAULT_EDITOR_MODEL=gpt-4o-mini
DEFAULT_PLANNER_MODEL=gpt-4o-mini

# Temperature Settings 
# Simple Reflection: Draft → Reflection → Revision
DRAFT_TEMPERATURE=0.7
REFLECTION_TEMPERATURE=0.3
REVISION_TEMPERATURE=0.5
# Tool Research: Research
RESEARCH_TEMPERATURE=0.3
# Multi-Agent: Planner → Research → Writer → Editor
PLANNER_TEMPERATURE=0.3
WRITER_TEMPERATURE=0.7
EDITOR_TEMPERATURE=0.4

# Tool Settings
ENABLE_ARXIV=True
ENABLE_TAVILY=True
ENABLE_WIKIPEDIA=True
MAX_SEARCH_RESULTS=5

# Workflow Settings
MAX_WORKFLOW_STEPS=4
MAX_TOOL_TURNS=6
REQUEST_TIMEOUT=300

# Semantic Caching
REDIS_URL=redis://localhost:6379
CACHE_ENABLED=True
CACHE_TTL_SECONDS=2592000
CACHE_SIMILARITY_THRESHOLD=0.95
EMBEDDING_MODEL=all-MiniLM-L6-v2

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=900

# Database (optional - for future use)
# DATABASE_URL=sqlite:///./research_agent.db
